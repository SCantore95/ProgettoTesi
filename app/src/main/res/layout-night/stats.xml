<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tesi.example.myapplication.fragment.StatsFragment">


    <TextureView
        android:id="@+id/textureView2"
        android:layout_width="176dp"
        android:layout_height="115dp"
        android:foregroundTint="#FAFAFA"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pie charts"
        app:layout_constraintEnd_toEndOf="@+id/textureView2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/textureView2"
        app:layout_constraintTop_toBottomOf="@+id/PieChart"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar charts"
        app:layout_constraintEnd_toEndOf="@+id/textureView"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/textureView"
        app:layout_constraintTop_toBottomOf="@+id/BarChart"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/BarChart"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_baseline_bar_chart_24"
        app:layout_constraintEnd_toEndOf="@+id/textureView"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/textureView"
        app:layout_constraintTop_toTopOf="@+id/textureView"
        tools:ignore="MissingConstraints" />

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="176dp"
        android:layout_height="115dp"
        android:layout_marginStart="48dp"
        android:foregroundTint="#FAFAFA"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/PieChart"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_baseline_pie_chart_24"
        app:layout_constraintEnd_toEndOf="@+id/textureView2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textureView2"
        app:layout_constraintTop_toTopOf="@+id/textureView2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
