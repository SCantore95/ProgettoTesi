<?xml version="1.0" encoding="utf-8"?>
<!-- pie_chart_fragment.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Aggiungi altre viste o layout se necessario -->

    <!-- Aggiungi il tuo PieChart -->


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="565dp"
        android:background="@color/black"
        android:contentDescription="back"
        android:foregroundGravity=""
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_225sdp"
        android:layout_centerInParent="true"
        tools:context="tesi.example.myapplication.fragment.PieChartFragment"
         >

    </com.github.mikephil.charting.charts.PieChart>


</RelativeLayout>